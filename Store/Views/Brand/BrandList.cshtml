@model IEnumerable<Store.Models.Brand>

@{
    ViewBag.Title = "Список брэндов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список брэндов</h2>

<p>
    @Html.ActionLink("Добавить брэнд", "Add")
</p>
<strong>Внимание!</strong> При удалении брэнда удаляются все товары связанные с ним.
<table class="table">
    <tr>
        <th>
            Наименование брэнда
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @Html.DisplayFor(modelItem => item.BrandName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
