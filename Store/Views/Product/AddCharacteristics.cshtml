@model Store.Models.CharacteristicToProduct

@{
    ViewBag.Title = "Добавление характеристик";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавление характеристик (Этап 2 из 3) </h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Характеристика</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
       Характеристика
        <div class="col-md-10">
            <select class="form-control" id="CharacteristicId" name="CharacteristicId">
                @foreach (var p in @ViewBag.Characteristic)
                {
                    <option value="@p.Id">@p.CharacName @p.Unit</option>
                }
            </select>
            <a href="/Characteristic/Add">Не нашли характеристику? Добавьте!</a>
        </div>
    </div>

    <div class="form-group">
        Значение
        <div class="col-md-10">
            @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
            @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
        </div>
    </div>
    @Html.CheckBox("exit", true) После добавления, добавить еще?

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Добавить" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    <a href="/Characteristic/CharList">К списку</a> | <a href="/Product/SetImage/@ViewBag.ProductId">Перейти к этапу 3</a>
</div>
