@model IEnumerable<Store.Models.Product>

@{
    ViewBag.Title = "Список товаров";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список продуктов</h2>

<p>
    @Html.ActionLink("Добавить товар", "Add")
</p>
<table class="table">
    <tr>
        <th>Изображение</th>
        <th>
            Брэнд
        </th>
        <th>
            Категория
        </th>
        <th>
            Серия
        </th>
        <th>
            Модель
        </th>
        <th>
            Стоимость
        </th>
        <th>
            Дата добавления
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img width="100" src="@item.PictureURL" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand.BrandName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Series)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price) ₱
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateAdded)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Детали", "Detail", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
